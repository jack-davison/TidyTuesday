
library(tidyverse)
library(tidymodels)
library(tidytuesdayR)
library(ggh4x)

tt = tt_load("2021-05-25")

drivers = tt$drivers

records = tt$records

records %>%
  ggplot(aes(x = date, y = time)) +
  geom_point(aes(color = type)) +
  geom_step(aes(color = type, lty = shortcut)) +
  facet_wrap(~track, scales = "free") +
  expand_limits(y = 0) +
  theme_bw()

drivers %>%
  count(year, wt = records) %>%
  ggplot(aes(x = year, y = n)) +
  geom_pointpath() +
  expand_limits(y = 0) +
  theme_bw()
